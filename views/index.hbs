
<div id="scrambler" class="split right">
    <div class="centered">
    <p id="status"></p>
    <p id="randomstate">
        
        <span class="result"></span>
        <br>
        
        <button>Generate random scramble</button><br/>
        
        <a id = "clear" href = "#">Clear Times</a><br/>
        <a id = "export" href = "#">Export Times</a>
        <a id = "stats" href = "/stats">Stats</a>
        {{!-- hidden form for post request --}}
        <form action="/times" method="POST">
            <input id="userTimes" name="times"type="text"> 
            <input id="userAverage" name="average"type="text"> 
            <input id="userBest" name="best"type="text"> 
            <input id="saveTimesBtn" type="submit" value="Save Times" />
        </form>
    </p>
    {{#if success}}
        <h1>Times Saved!</h1>
    {{/if }}
    </div>
</div>
<div id="container" class="split left">
    <div class="centered">
        <div class="content" ontouchstart="run()">
    <p id="timerHead">Time your solve</p>
    <div id = "scram"></div>
    <div id="timeOut"><span id="min"></span><span id="colon"></span><span id="sec">0</span>.<span id="decimal">00</span></div>
    <div id = "timeList"></div>
    <div id = "stats">
        <span id = "solveNum">Solves: 0</span> <br/>
        <span id = "overallAv">Average: </span><br/>
        <span id = "fastest">Best: </span>
    </div>
    </div>
    </div>
</div>
     
        
   
   